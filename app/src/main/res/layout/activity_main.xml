<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp">
        <ImageView
            android:id="@+id/show_debug"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_baseline_info_24"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            app:tint="@color/onSurfaceContrast" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp">
            <TextView
                android:id="@+id/subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quick Tools"
                android:textColor="@color/onSurfaceContrast"
                android:textStyle="normal"
                android:textSize="15sp"
                android:maxLines="1"/>
            <TextView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="24 folders, 6 files"
                android:textColor="@color/onSurface"
                android:textStyle="normal"
                android:textSize="11sp"
                android:maxLines="1"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/tasks"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_baseline_assignment_24"
            app:tint="@color/onSurfaceContrast"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:layout_marginEnd="12dp"/>
        <ImageView
            android:id="@+id/more_options"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_baseline_more_vert_24"
            app:tint="@color/onSurfaceContrast"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:gravity="center">
        <ImageView
            android:id="@+id/home"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_round_home_24"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            app:tint="@color/onSurfaceContrast" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/path_treeview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:itemCount="2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView
            android:id="@+id/tabs_options"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_chevron_right_24"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:rotation="90"
            app:tint="@color/onSurfaceContrast"
            android:scaleType="centerInside"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"/>
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/surface"
            app:tabTextAppearance="@style/TabLayoutCustomText"
            app:tabSelectedTextColor="@color/onSurfaceContrast"
            app:tabTextColor="@color/onSurface"
            app:tabIndicatorColor="@color/secondary"
            app:tabMode="scrollable"
            app:tabIndicatorHeight="2dp"
            app:tabPadding="0dp"
            app:tabRippleColor="@color/highlight"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/option_search"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true">
            <ImageView
                app:tint="@color/onSurfaceContrast"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_round_search_24"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/option_refresh"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true">
            <ImageView
                app:tint="@color/onSurfaceContrast"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_baseline_restart_alt_24"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/option_add"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true">
            <ImageView
                app:tint="@color/onSurfaceContrast"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_baseline_add_24"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/option_sort"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true">
            <ImageView
                app:tint="@color/onSurfaceContrast"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_baseline_sort_24"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/option_select_all"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true">
            <ImageView
                app:tint="@color/onSurfaceContrast"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_baseline_select_all_24"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/option_back"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true">
            <ImageView
                app:tint="@color/onSurfaceContrast"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_baseline_arrow_back_24"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>